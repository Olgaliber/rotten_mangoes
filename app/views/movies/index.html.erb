<h1>Rotten Mangoes</h1>
<%= form_tag movies_path, :method => 'get' do %>
  <p>

    <%= label_tag "find by title or director" %><br/>
    <%= text_field_tag :find %><br/>

    <%= label_tag :duration %><br/>
   	<%= select_tag "duration", "<option></option><option>Under 90 minutes</option><option>Between 90 and 120 minutes</option><option>Over 120 minutes</option>".html_safe %>

    <%= submit_tag "Search" %>
  </p>
<% end %>



<%= link_to "Submit a movie!", new_movie_path %>
<hr>

<%= render 'movies/movie' %>
